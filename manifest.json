{
  "manifest_version": 3,
  "name": "Watchlist Exporter",
  "version": "1.0.0",
  "description": "Export your watchlists from Netflix, Prime Video, Disney+, Hulu and other streaming services to CSV",
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.primevideo.com/*",
    "https://www.amazon.com/*",
    "https://www.disneyplus.com/*",
    "https://www.hulu.com/*",
    "https://tv.apple.com/*",
    "https://play.max.com/*",
    "https://www.peacocktv.com/*",
    "https://www.paramountplus.com/*"
  ],
    "background": {
      "service_worker": "background.js"
    },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-inactive-16.png",
      "48": "icons/icon-inactive-48.png",
      "128": "icons/icon-inactive-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/*",
        "https://www.primevideo.com/*",
        "https://www.amazon.com/*",
        "https://www.disneyplus.com/*",
        "https://www.hulu.com/*",
        "https://tv.apple.com/*",
        "https://play.max.com/*",
        "https://www.peacocktv.com/*",
        "https://www.paramountplus.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "watchlist-exporter@example.com"
    }
  }
}
